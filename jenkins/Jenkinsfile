def someVar = "test"

pipeline { 
    agent any 
    options {
        skipStagesAfterUnstable()
        skipDefaultCheckout()
/*        checkoutToSubdirectory('k8s') */
        timeout(time: 15, unit: 'MINUTES')
        timestamps()
    }



    environment {
        AWS_REGION="us-east-2"
    }

    stages {
        stage('Prepare build') {
            steps {
                checkout scm
                sh "source /var/jenkins_home/.bashrc"
            }
        }

        stage('Set up AWS CLI') {
            steps {
                echo "Setup AWS CLI"
                sh "env"
            }
        }

        stage('Create CF stack') {
            steps {
                echo "Create CF stack"
            }
        }

        stage('Deployment') {
            steps {
                echo "Deployment"
            }
        }

        stage('Running tests') {
            steps {
                echo "Running tests"
            }
        }

        stage('Clean up') {
            steps {
                echo "Clean up"
            }
        }
    }
}